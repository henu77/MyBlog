<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.malong.blog.dao.TagsMapper">
    <resultMap id="tagsMap" type="cn.malong.blog.pojo.Tag">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>
    <select id="getTagsByLimit" resultMap="tagsMap">
      select * from t_tag order by id limit ${startIndex},${pageSize};
    </select>
</mapper>